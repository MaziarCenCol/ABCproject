<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table">
        <thead class="bg-warning text-dark">
            <tr>
                <th>
                    Code
                </th>
                <th>
                    Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Cost/H
                </th>
                <th>
                    Location
                </th>
                <th>
                    Hours/Day
                </th>
                <th>
                    Model
                </th>
                <th>
                    Type
                </th>
                <th>
                    Orientation
                </th>
                <th>
                    Controller
                </th>
                @* <th></th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResourceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MachineCategory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OperationCostHourly)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxAvailableHoursPerDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MachineType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Orientation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Controller)
                    </td>
                    @* <td style="text-align:center">
                        <a asp-action="Edit" style="width: 65px" class="btn btn-sm btn-outline-primary" asp-route-id="@item.Id">Edit</a>
                        @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                    @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                    @* </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
