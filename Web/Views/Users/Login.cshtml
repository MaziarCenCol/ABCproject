@model LoginModel
@{
    ViewBag.Title = "Log In";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-start min-vh-100 pt-5">
    <div class="card p-5 shadow-lg w-50">
        <h4 class="text-center mb-4">Log in</h4>
        <form asp-action="Login" asp-controller="Users" method="post">
            <input type="hidden" asp-for="ReturnUrl">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control shadow-sm" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control shadow-sm" />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group" style="text-align:center">
                <button class="btn btn-primary" type="submit" style="width: 100px">Log In</button>
            </div>
            <div class="form-group" style="padding: 15px 0 5px 0">
                @* <a asp-action="Forgot" asp-controller="Users" style="float:left"> Forgot Password </a> *@
                <span style="float:left; color: gray"> Forgot Password </span>
                <a asp-action="Create" asp-controller="Users" style="float:right"> Create New Account </a>
            </div>
        </form>
    </div>
</div>
