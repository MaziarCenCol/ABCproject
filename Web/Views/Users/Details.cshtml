@model User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>User Details</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class="col-sm-2">
            &nbsp;
        </dt>

    </dl>
    <dl class="row">
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
        </dd>
    </dl>
</div>
<div class="form-group">
    <a class="btn btn-sm bg-primary text-light" asp-action="Edit" asp-route-id="@Model?.Id" style="width: 100px">  Edit  </a>
    &nbsp; &nbsp;
    @{
        var s1 = Context.Session.GetInt32("_id");
        if (s1 == Model.Id)
        {
            <a class="btn btn-sm bg-warning text-light" asp-action="ResetPassword" asp-route-id="@Model?.Id">  Reset Password  </a>
        }
    }
</div>
<div>
    <br />
    @{
        if (Convert.ToString(Context.Session.GetString("_role")) == "Technician")
        {
            <a asp-action="Index" asp-controller="Home">Back to Home Page</a>
        }
        else
        {
            <a asp-action="Index">Back to List</a>
        }
    }
</div>
