@{
    ViewData["Title"] = "Schedule Graph";
}

<h2>Schedule Visualization</h2>

@if (!string.IsNullOrEmpty(ViewBag.PlotPath))
{
    <iframe src="@ViewBag.PlotPath" width="100%" height="700px" style="border: 1px solid #ccc;"></iframe>
}
else
{
        <p>No graph available. Please upload a schedule file.</p>
}

<a href="@Url.Action("Schedule")" class="btn btn-primary">Upload New File</a>

